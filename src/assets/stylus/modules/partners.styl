.partners
  padding 60px 0 80px 0
  min-height 100vh
  background $green

  .title
    color $white
    font-size 36px
    font-weight 700
    text-transform uppercase
    text-align center
    margin-bottom 10px

    &::after
      content ''
      display block
      width 100px
      margin 0 auto
      margin-top 5px
      height 5px
      background $white

  .subtitle
    color $white
    font-size 18px
    font-weight 400
    text-align center
    margin-bottom 80px

  .partner
    flex-basis: 250px
    margin: 10px
    background-size: cover!important
    padding: 10px
    text-align center

    img
      width 200px
      filter: brightness(0%)
      opacity .5
      transition .3s

    img:hover
      width 200px
      filter: brightness(100%)
      opacity 1
