.projects
  width 100%
  font-size 0

  .projects-list,
  .projects-text
    display inline-block
    vertical-align middle
    width 100%

  .projects-text
    background $green
    max-width 40%
    color $white
    padding 80px 60px

  .projects-text-title
    font-size 30px
    font-weight 600

  .projects-text-subtitle
    font-size 16px
    font-weight 300

  .projects-text-button
    color $green
    background $white
    padding 8px 20px
    text-transform uppercase
    font-size 16px
    display inline-block

  .projects-list
    max-width 60%

  .project
    display inline-block
    vertical-align top
    width 100%
    max-width calc(100% / 3)
    background url('../images/project.png')

  .project-description,
  .project
    color $white

  .project-title
    font-size 22px
    font-weight 600

  .project-description
    font-size 16px
    font-weight 300

  .project-button
    color $green
    background $white
    padding 8px 20px
    text-transform uppercase
    font-size 16px
    display inline-block