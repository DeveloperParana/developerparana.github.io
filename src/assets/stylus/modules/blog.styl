.blog
  margin-top 60px
  min-height 100vh

  .title
    color $green
    font-size 36px
    font-weight 700
    text-transform uppercase
    text-align center
    margin-bottom 10px

  .subtitle
    color $green
    font-size 18px
    font-weight 400
    text-align center

  .post
    span(1/2, top)

  .post-title
    font-size 22px
    color $gray

    &::after
      content ''
      width 100%
      height 5px
      background $gray
      display block

  .post-date
    font-size 18px
    color $tundora

  .post-description
    text-align left

    h2,
    p
      font-size 16px
      color $green
      font-weight 400

