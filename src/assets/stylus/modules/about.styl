.about
  padding-top 60px
  min-height 100vh
  background $green
  position relative

  &::before
    content ''
    position absolute
    bottom 0
    height 80px
    width 100%
    display block
    background $white

  &::after
    content ''
    background $green
    border-radius 0 0 100% 100%
    height 100px
    width 100%
    display block
    position absolute
    bottom 0

  .title
    color $white
    font-size 36px
    font-weight 700
    text-transform uppercase
    text-align center
    margin-bottom 10px

  .subtitle
    color $white
    font-size 18px
    font-weight 400
    text-align center
    margin-bottom 80px

  .text
    color $white
    font-size 20px
    text-align center
    margin-bottom 20px
    line-height 30px
    font-weight 400
