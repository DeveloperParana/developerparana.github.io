.home
  background $green
  min-height 100vh
  border-bottom $white
  position relative
  padding-bottom 100px

  &::before
    content ''
    position absolute
    bottom 0
    height 80px
    width 100%
    display block
    background $white

  &::after
    content ''
    background $green
    border-radius 0 0 100% 100%
    height 100px
    width 100%
    display block
    position absolute
    bottom 0

  .text
    padding-top 100px
    max-width 480px

    +below('m')
      text-align center

  .title,
  .description
    color $white
    text-align center

  .title
    font-size 55px
    font-weight 700
    line-height 55px

    +below('t')
      font-size 45px

    +below('m')
      text-align center
      font-size 35px
      line-height 45px

    &::after
      content ''
      width 100px
      height 7px
      background $white
      display block
      margin 0 auto

  .description
    font-size 18px
    font-weight 400

    +below('m')
      text-align center

  .more
    color $green
    background $white
    font-size 18px
    padding 8px 15px
    display inline-block
    border-radius 3px
    margin-top 10px

    +below('m')
      margin-top 20px



  .arrow
    width 30px
    height 30px
    position absolute
    bottom: 120px
    z-index: 9

    img
      animation teste .3s infinite alternate

    @keyframes teste {
      from {
        transform: translateY(0px);
      }
      to {
        transform: translateY(10px);
      }
    }
