.home
  background $green
  min-height 100vh
  border-bottom $white
  position relative
  padding-bottom 100px

  &::before
    content ''
    position absolute
    bottom 0
    height 80px
    width 100%
    display block
    background $white

  &::after
    content ''
    background $green
    border-radius 0 0 100% 100%
    height 100px
    width 100%
    display block
    position absolute
    bottom 0

  .text
    padding-top 20%
    max-width 480px

    +below('m')
      text-align center

  .title,
  .description
    color $white
    text-align left

  .title
    font-size 55px
    font-weight 700
    line-height 60px
    margin-bottom 10px

    &::after
      content ''
      width 220px
      height 5px
      background $white
      display block
      margin-top 15px

    +below('t')
      font-size 45px

    +below('m')
      text-align center
      font-size 35px
      line-height 45px

  .description
    font-size 18px
    font-weight 400
    margin-top 15px

    +below('m')
      text-align center

  .more
    color $green
    background $white
    font-size 18px
    padding 8px 15px
    display inline-block
    border-radius 3px
    margin-top 20px

    +below('m')
      margin-top 20px

  .arrow
    position absolute
    left 50%
    bottom 40px
    transform translateX(-50%)
    color $white
    font-size 60px
    display block
    z-index 20
