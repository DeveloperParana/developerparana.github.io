.home
  background $green
  min-height 100%
  border-bottom $white
  position relative

  &::before
    content ''
    position absolute
    bottom 0
    height 80px
    width 100%
    display block
    background $white

  &::after
    content ''
    background $green
    border-radius 0 0 100% 100%
    height 100px
    width 100%
    display block
    position absolute
    bottom 0

  .text
    padding-top 180px
    max-width 480px

  .title,
  .description
    color $white
    text-align left

  .title
    font-size 55px
    font-weight 700
    line-height 55px

    +below('t')
      font-size 45px

    &::after
      content ''
      width 100%
      height 10px
      background $white
      display block
      margin 20px 0

  .description
    font-size 18px
    font-weight 400
