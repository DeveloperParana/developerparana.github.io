.events
  margin-top 60px
  min-height 100%
  position relative

  &::before
    content ''
    position absolute
    bottom 0
    height 80px
    width 100%
    display block
    background $green

  &::after
    content ''
    background $white
    border-radius 0 0 100% 100%
    height 100px
    width 100%
    display block
    position absolute
    bottom 0

  .title
    color $green
    font-size 36px
    font-weight 700
    text-transform uppercase
    text-align center
    margin-bottom 10px

  .subtitle
    color $green
    font-size 18px
    font-weight 400
    text-align center
    margin-bottom 80px

  .event
    span(1/4, top)

  .event-date
    color $gray
    font-size 45px
    font-weight 700

    &::after
      content ''
      background $green
      width 50%
      height 5px
      margin 10px 0 14px 0
      display block

  .event-title
    font-size 14px
    color $gray
    text-transform uppercase

  .event-organizer
    font-size 12px
    font-weight 700
    color $tundora
    margin-top 5px

  .event-link
    color $green
    font-size 12px
    font-style italic
    font-weight 700
